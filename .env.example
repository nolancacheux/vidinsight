
# AI-Video-Comment-Analyzer Environment Config
# Copy this file to .env and fill in your values
# cp .env.example .env

# HUGGING FACE INFERENCE API (Optional)
# For fast ML inference without local GPU
# Get token at: https://huggingface.co/settings/tokens
HF_TOKEN=
HF_ENABLED=true

# DATABASE
DATABASE_URL=sqlite:///./ai-video-comment-analyzer.db

# API SERVER
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# YOUTUBE EXTRACTION
YOUTUBE_MAX_COMMENTS=100
YOUTUBE_SEARCH_MAX_RESULTS=8
YOUTUBE_METADATA_TIMEOUT=30
YOUTUBE_COMMENTS_TIMEOUT=120
YOUTUBE_SEARCH_TIMEOUT=30

# ML MODELS
SENTIMENT_MODEL=nlptown/bert-base-multilingual-uncased-sentiment
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ML PROCESSING
SENTIMENT_BATCH_SIZE=32
SENTIMENT_MAX_LENGTH=512
ML_PROGRESS_UPDATE_FREQUENCY=10

# TOPIC MODELING
MAX_TOPICS=5
MAX_TOPICS_ML=10
TOPIC_KEYWORDS_COUNT=5
TOPIC_MIN_COMMENTS=2

# DISPLAY LIMITS
HISTORY_LIMIT=10
SEARCH_RESULTS_LIMIT=5
RESULTS_DISPLAY_LIMIT=5

# OLLAMA (Local LLM for AI Summaries)
# Install Ollama: https://ollama.ai
# Pull model: ollama pull llama3.2:3b
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_ENABLED=true

# FRONTEND (prefix with NEXT_PUBLIC_ for browser access)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SEARCH_DEBOUNCE_MS=500
